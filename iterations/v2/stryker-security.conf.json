{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "_comment": "ARBITER-013 Security Components Mutation Testing - Target: â‰¥80% mutation score",
  "packageManager": "npm",
  "reporters": ["html", "clear-text", "progress"],
  "testRunner": "jest",
  "jest": {
    "enableFindRelatedTests": true,
    "config": {
      "testMatch": [
        "**/tests/unit/orchestrator/security-policy-enforcer-hardening.test.ts",
        "**/tests/unit/security/agent-registry-security-hardening.test.ts",
        "**/tests/unit/security/command-validator-hardening.test.ts",
        "**/tests/integration/security/security-enforcement-e2e.test.ts"
      ]
    }
  },
  "coverageAnalysis": "perTest",
  "mutate": [
    "src/orchestrator/SecurityManager.ts",
    "src/security/AgentRegistrySecurity.ts",
    "src/security/CommandValidator.ts",
    "!src/**/*.test.ts",
    "!src/**/*.spec.ts",
    "!src/**/index.ts"
  ],
  "mutator": {
    "plugins": ["typescript"],
    "excludedMutations": ["StringLiteral", "ArrayDeclaration"]
  },
  "timeoutMS": 20000,
  "timeoutFactor": 1.5,
  "maxConcurrentTestRunners": 1,
  "thresholds": {
    "high": 80,
    "low": 70,
    "break": 70
  },
  "htmlReporter": {
    "fileName": "mutation-report-security.html"
  },
  "ignorePatterns": [
    "dist",
    "node_modules",
    "coverage",
    "**/*.d.ts",
    "**/*.js.map",
    "tests/production/**"
  ],
  "incremental": false
}
