{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "reporters": ["html", "clear-text", "progress"],
  "testRunner": "jest",
  "coverageAnalysis": "off",
  "mutate": ["src/arbitration/WaiverInterpreter.ts"],
  "mutator": {
    "plugins": ["typescript"],
    "excludedMutations": ["StringLiteral", "ArrayDeclaration"]
  },
  "timeoutMS": 15000,
  "concurrency": 1,
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 60
  },
  "htmlReporter": {
    "fileName": "mutation-report-waiver-interpreter.html"
  },
  "ignorePatterns": [
    "dist",
    "node_modules",
    "coverage",
    "**/*.d.ts",
    "**/*.js.map",
    "tests/production/**",
    "tests/integration/**",
    "tests/e2e/**"
  ],
  "jest": {
    "enableFindRelatedTests": true,
    "config": {
      "testMatch": ["**/tests/unit/arbitration/WaiverInterpreter.test.ts"]
    }
  }
}
