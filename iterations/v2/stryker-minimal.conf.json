{
  "packageManager": "npm",
  "reporters": ["html", "clear-text", "progress"],
  "testRunner": "jest",
  "coverageAnalysis": "off",
  "mutate": ["src/learning/AdaptivePromptEngineer.ts"],
  "mutator": {
    "plugins": ["typescript"]
  },
  "timeoutMS": 10000,
  "concurrency": 1,
  "thresholds": {
    "high": 80,
    "low": 70,
    "break": 70
  },
  "ignorePatterns": ["dist", "node_modules", "coverage"],
  "htmlReporter": {
    "fileName": "mutation-report-minimal.html"
  }
}
