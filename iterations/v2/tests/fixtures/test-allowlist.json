{
  "version": "1.0",
  "commands": {
    "ls": {
      "allowed": true,
      "args": ["-la", "-l", "-a"]
    },
    "pwd": {
      "allowed": true,
      "args": []
    },
    "echo": {
      "allowed": true,
      "args": ["*"]
    },
    "cat": {
      "allowed": true,
      "args": ["*.txt", "*.md", "*.json"]
    },
    "grep": {
      "allowed": true,
      "args": ["*"]
    },
    "find": {
      "allowed": true,
      "args": ["-name", "-type", "-exec"]
    },
    "npm": {
      "allowed": true,
      "args": ["test", "run", "install", "ci"]
    },
    "node": {
      "allowed": true,
      "args": ["-e", "*.js"]
    }
  },
  "patterns": {
    "allowedPaths": ["/tmp", "/var/tmp", "./", "../", "~/"],
    "blockedPatterns": [
      "/etc/passwd",
      "/etc/shadow",
      "/proc/*",
      "/sys/*",
      "rm -rf /",
      "format",
      "fdisk"
    ]
  }
}
