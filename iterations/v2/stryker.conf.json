{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "_comment": "ARBITER-013 Security Policy Enforcer Mutation Testing - Target: â‰¥80% mutation score for security-critical components",
  "packageManager": "npm",
  "reporters": ["html", "clear-text", "progress"],
  "testRunner": "jest",
  "coverageAnalysis": "perTest",
  "mutate": [
    "src/orchestrator/SecurityManager.ts",
    "src/security/AgentRegistrySecurity.ts",
    "src/security/CommandValidator.ts",
    "!src/**/*.test.ts",
    "!src/**/*.spec.ts",
    "!src/**/index.ts"
  ],
  "mutator": {
    "plugins": ["typescript"],
    "excludedMutations": ["StringLiteral", "ArrayDeclaration"]
  },
  "timeoutMS": 60000,
  "timeoutFactor": 2.0,
  "concurrency": 1,
  "thresholds": {
    "high": 80,
    "low": 70,
    "break": 70
  },
  "htmlReporter": {
    "fileName": "mutation-report.html"
  },
  "ignorePatterns": [
    "dist",
    "node_modules",
    "coverage",
    "**/*.d.ts",
    "**/*.js.map",
    "tests/production/**",
    "tests/integration/**",
    "tests/e2e/**"
  ],
  "incremental": true,
  "incrementalFile": ".stryker-tmp/incremental.json"
}
