{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "reporters": ["html", "clear-text", "progress"],
  "testRunner": "jest",
  "coverageAnalysis": "off",
  "mutate": [
    "src/learning/AdaptivePromptEngineer.ts"
  ],
  "mutator": {
    "plugins": ["typescript"],
    "excludedMutations": ["StringLiteral", "ArrayDeclaration", "ObjectLiteral"]
  },
  "timeoutMS": 5000,
  "concurrency": 1,
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 60
  },
  "htmlReporter": {
    "fileName": "mutation-report-fast.html"
  },
  "ignorePatterns": [
    "dist",
    "node_modules",
    "coverage",
    "**/*.d.ts",
    "**/*.js.map",
    "tests/production/**",
    "tests/integration/**",
    "tests/e2e/**"
  ],
  "maxConcurrentTestRunners": 1,
  "symlinkNodeModules": false,
  "cleanTempDir": "always",
  "jest": {
    "enableFindRelatedTests": true,
    "config": {
      "testMatch": [
        "**/tests/unit/learning/adaptive-prompt-engineer-mutation.test.ts"
      ],
      "testNamePattern": "should initialize with empty state|should record successful iterations|should update success patterns when improvement delta > 0.01|should update failure patterns when error detected"
    }
  }
}
