{
  "name": "agent-agency-poc",
  "version": "0.2.0-poc",
  "description": "Agent Agency Enhanced POC - Advanced proof-of-concept with agentic RL, thinking budgets, and podcast-inspired reliability features",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:e2e:setup": "node scripts/setup-e2e-env.js",
    "test:e2e:ci": "npm run test:e2e:setup && npm run test:e2e",
    "test:contract": "jest --testPathPattern=contract",
    "test:contract:verbose": "jest --testPathPattern=contract --verbose",
    "test:playwright": "playwright test",
    "test:mutation": "stryker run",
    "test:axe": "jest --testPathPattern=axe",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsx watch src/index.ts",
    "dev:mcp": "tsx watch src/mcp/server.ts",
    "start": "node dist/src/index.js",
    "start:mcp": "node dist/src/mcp/server.js",
    "clean": "rm -rf dist coverage .stryker-tmp",
    "mcp:start": "node bin/mcp-server.js start",
    "validate": "caws validate --suggestions",
    "db:migrate": "node scripts/migrate-db.js up",
    "db:migrate:status": "node scripts/migrate-db.js status",
    "db:rollback": "node scripts/migrate-db.js down",
    "db:seed": "node scripts/seed-db.js",
    "perf:budgets": "node scripts/check-perf-budgets.js",
    "dep:policy": "npm audit --audit-level moderate",
    "thinking:budgets": "node scripts/analyze-thinking-budgets.js",
    "rl:train": "node scripts/train-rl-models.js",
    "rl:eval": "node scripts/evaluate-rl-models.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/agent-agency.git"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json",
          "useESM": true
        }
      ],
      "^.+\\.js$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!src/**/*.d.ts",
      "!src/**/index.ts",
      "!src/ai/ollama-client.ts",
      "!src/evaluation/orchestrator.ts",
      "!src/data/dao/AgentDAO.ts",
      "!src/data/dao/ExperienceDAO.ts",
      "!src/data/migrations/MigrationManager.ts",
      "!src/mcp/tools/categories/SystemTools.ts",
      "!src/mcp/tools/categories/TaskManagementTools.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^(\\.\\.?\\/.*)\\.js$": "$1"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(supertest|axios|@modelcontextprotocol)/)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ]
  },
  "keywords": [
    "agent",
    "agency",
    "ai",
    "orchestration",
    "multi-agent",
    "mcp",
    "agentic-rl",
    "thinking-budgets",
    "evaluation",
    "poc"
  ],
  "author": "@darianrosebrook",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@stryker-mutator/core": "^8.0.0",
    "@stryker-mutator/jest-runner": "^8.0.0",
    "@stryker-mutator/typescript-checker": "^8.0.0",
    "@types/jest": "^29.5.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "openapi-types": "^12.1.3",
    "testcontainers": "^10.0.0",
    "ts-jest": "^29.4.4",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "@types/pg": "^8.15.5",
    "dotenv": "^16.3.1",
    "fast-check": "^3.0.0",
    "ollama": "^0.3.0",
    "openai": "^4.24.7",
    "pg": "^8.16.3",
    "redis": "^5.8.3",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "bin": {
    "mcp-server": "./bin/mcp-server.js",
    "agent-agency": "./bin/agent-agency.js"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
