# Agent Agency V3 - Model Hot-Swap Service
FROM rust:1.75-slim as builder

# Install system dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Create app user
ENV USER=model-hotswap
ENV UID=10004

RUN adduser \
    --disabled-password \
    --gecos "" \
    --home "/nonexistent" \
    --shell "/sbin/nologin" \
    --no-create-home \
    --uid "${UID}" \
    "${USER}"

WORKDIR /app

# Copy workspace configuration
COPY Cargo.toml Cargo.lock ./

# Copy all crates
COPY model-hotswap ./model-hotswap
COPY agent-agency-apple-silicon ./agent-agency-apple-silicon
COPY agent-agency-observability ./agent-agency-observability

# Build the application
RUN cargo build --release --package model-hotswap

# Runtime stage
FROM debian:bookworm-slim

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    && rm -rf /var/lib/apt/lists/*

# Import from builder
COPY --from=builder /etc/passwd /etc/passwd
COPY --from=builder /etc/group /etc/group

WORKDIR /app

# Copy the compiled binary
COPY --from=builder /app/target/release/model-hotswap /app/model-hotswap

# Use an unprivileged user
USER model-hotswap:model-hotswap

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8083/health || exit 1

# Expose port
EXPOSE 8083

# Run the application
CMD ["/app/model-hotswap"]
