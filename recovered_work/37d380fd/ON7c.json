{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local",
    "tsconfig.json",
    "jest.config.*",
    ".eslintrc*"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**"],
      "inputs": ["src/**", "public/**", "package.json", "tsconfig.json"],
      "env": ["NODE_ENV"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**", "tests/**", "test/**", "__tests__/**", "jest.config.*"],
      "env": ["NODE_ENV", "CI"]
    },
    "test:unit": {
      "dependsOn": ["build"],
      "inputs": ["src/**", "tests/unit/**", "**/*.test.ts", "**/*.spec.ts"]
    },
    "test:integration": {
      "dependsOn": ["build", "test:unit"],
      "inputs": ["src/**", "tests/integration/**", "**/*.integration.test.ts"]
    },
    "test:e2e": {
      "dependsOn": ["build", "test:integration"],
      "inputs": ["src/**", "tests/e2e/**", "**/*.e2e.test.ts"]
    },
    "test:contract": {
      "dependsOn": ["build"],
      "inputs": ["src/**", "tests/contract/**", "**/*.contract.test.ts"]
    },
    "test:coverage": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**", "tests/**"]
    },
    "lint": {
      "inputs": ["src/**", "tests/**", ".eslintrc*", "eslint.config.*"],
      "env": ["NODE_ENV"]
    },
    "lint:fix": {
      "inputs": ["src/**", "tests/**", ".eslintrc*", "eslint.config.*"],
      "env": ["NODE_ENV"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "tsconfig.json", "**/*.ts", "**/*.tsx"],
      "env": ["NODE_ENV"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV", "PORT", "DATABASE_URL"]
    },
    "clean": {
      "cache": false
    },
    "migrate": {
      "dependsOn": ["build"],
      "inputs": ["migrations/**", "scripts/**"],
      "env": ["DATABASE_URL"]
    },
    "db:setup": {
      "dependsOn": ["build"],
      "inputs": ["migrations/**", "scripts/**"],
      "env": ["DATABASE_URL"]
    },
    "benchmark": {
      "dependsOn": ["build"],
      "inputs": ["src/**", "benchmarks/**"],
      "outputs": ["benchmark-results/**"]
    }
  },
  "globalEnv": [
    "CI",
    "NODE_ENV",
    "TURBO_TOKEN",
    "TURBO_TEAM",
    "TURBO_REMOTE_CACHE_DISABLED"
  ]
}
