# pnpm configuration for optimized performance

# Global store location for faster installs across projects
store-dir=~/.pnpm/store

# Use hard links for better performance
node-linker=isolated

# Parallel installation
parallel-install=true

# Resolution mode
resolution-mode=highest

# Cache settings
cache-dir=~/.pnpm/cache

# Enable auto-install-peers for better dependency management
auto-install-peers=true

# Enable shell emulator for cross-platform scripts
shell-emulator=true

# Network settings for faster downloads
network-concurrency=16
fetch-timeout=60000
