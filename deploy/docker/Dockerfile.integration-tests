# Integration Tests Dockerfile - Agent Agency V3
FROM rust:1.75-slim AS builder

# Install system dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy workspace configuration
COPY Cargo.toml Cargo.lock ./
COPY iterations/v3/Cargo.toml ./iterations/v3/Cargo.toml

# Copy source code
COPY iterations/v3/ ./iterations/v3/

# Build integration tests
RUN cargo build --test integration --release

# Runtime stage
FROM debian:bookworm-slim

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Copy built test binary
COPY --from=builder /app/target/release/deps/integration-* /app/integration-tests/

# Copy test data if any
COPY test-data /app/test-data

# Set working directory
WORKDIR /app

# Default command runs the integration tests
CMD ["./integration-tests/integration-1234567890abcdef", "--nocapture"]
